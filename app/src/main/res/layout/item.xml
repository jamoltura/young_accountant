<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="horizontal">


    <RelativeLayout
            android:id="@+id/rl_schet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textschet"
                android:textSize="18sp"
                android:padding="6dp"
                android:text="0112 "/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_schet_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textschet_value"
                android:textSize="18sp"
                android:padding="6dp"
                android:text="Износ благоустройства основных средств, полученных по договору финансовой аренды"/>
    </RelativeLayout>
</LinearLayout>
