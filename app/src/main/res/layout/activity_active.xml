<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity_active">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorfon">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipgroup_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true"
                app:chipSpacingHorizontal="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_a1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/active_1"
                    android:theme="@style/Theme.MaterialComponents.Light"/>
            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_a2"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/active_2"
                    android:theme="@style/Theme.MaterialComponents.Light"/>
        </com.google.android.material.chip.ChipGroup>

        <ListView
                android:id="@+id/list_activ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>