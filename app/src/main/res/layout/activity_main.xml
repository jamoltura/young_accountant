<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <LinearLayout
            android:id="@+id/display"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/display_carusel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.7">

            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                            android:id="@+id/ll_1"
                            android:orientation="vertical"
                            style="@style/FrameLayoutBase">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2">

                            <ImageButton
                                    android:id="@+id/imgbtn1"
                                    app:srcCompat="@drawable/ic_active"
                                    style="@style/bazebutton"/>
                        </RelativeLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                            <TextView
                                    android:text="@string/active"
                                    style="@style/ImageButtonTextstyle"
                                    android:id="@+id/textView"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/ll_2"
                            android:orientation="vertical"
                            style="@style/FrameLayoutBase">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2">

                            <ImageButton
                                    android:id="@+id/imgbtn2"
                                    app:srcCompat="@drawable/ic_passive"
                                    style="@style/bazebutton"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                            <TextView
                                    android:text="@string/passive"
                                    style="@style/ImageButtonTextstyle"
                                    android:id="@+id/textView2"/>
                        </RelativeLayout>
                    </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/ll_3"
                        android:orientation="vertical"
                        style="@style/FrameLayoutBase">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                        <ImageButton
                                android:id="@+id/imgbtn3"
                                app:srcCompat="@drawable/ic_transit"
                                style="@style/bazebutton"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                        <TextView
                                android:text="@string/transit"
                                style="@style/ImageButtonTextstyle"
                                android:id="@+id/textView3"
                                android:gravity="center_horizontal"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_4"
                        android:orientation="vertical"
                        style="@style/FrameLayoutBase">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                        <ImageButton
                                android:id="@+id/imgbtn4"
                                app:srcCompat="@drawable/ic_zabalanse"
                                style="@style/bazebutton"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                        <TextView
                                android:text="@string/zabalans"
                                style="@style/ImageButtonTextstyle"
                                android:id="@+id/textView4"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/ll_5"
                        android:orientation="vertical"
                        style="@style/FrameLayoutBase">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                        <ImageButton
                                android:id="@+id/imgbtn5"
                                app:srcCompat="@drawable/ic_active"
                                style="@style/bazebutton"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                        <TextView
                                android:text="@string/dopol"
                                style="@style/ImageButtonTextstyle"
                                android:id="@+id/textView5"
                                android:gravity="center_horizontal"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_6"
                        android:orientation="vertical"
                        style="@style/FrameLayoutBase">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                        <ImageButton
                                android:id="@+id/imgbtn6"
                                app:srcCompat="@drawable/ic_passive"
                                style="@style/bazebutton"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                        <TextView
                                android:text="@string/dopol2"
                                style="@style/ImageButtonTextstyle"
                                android:id="@+id/textView6"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3">

            <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:singleSelection="true"
                    android:layout_centerInParent="true">

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_ru"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="@string/lang_ru"
                        android:checkable="true"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_uz_kiril"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="@string/lang_uz_k"
                        android:checkable="true"/>
                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_uz_latin"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:text="@string/lang_uz_l"
                        android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>